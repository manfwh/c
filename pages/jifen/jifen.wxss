/* pages/jifen/jifen.wxss */
.header {
  display: flex;
  align-items: center;
  height: 88rpx;
}
.dots {
  margin-right: 24rpx;
}
.dots .dot1 {
  width: 8rpx;
  height: 8rpx;
  background: #ffc62b;
  border-radius: 50%;
  margin-right: 4rpx;
}
.dots .dot2 {
  width: 24rpx;
  height: 8rpx;
  background: #6dc42d;
  border-radius: 4rpx;
}
.header .text {
  font-size: 24rpx;
  color: #70717b;
}
.fraction {
  width: 74rpx;
  height: 38rpx;
  border-radius: 19rpx;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  background: linear-gradient(to right, #23b051, #2dde42);
  margin-left: 28rpx;
  line-height: 38rpx;
}

/* 积分券  */
.voucher {
  width: 614rpx;
  height: 140rpx;
  border-radius: 3px;
  background: #fff;
  display: flex;
  margin: 0 auto;  
  position: relative;  
  margin-bottom: 24rpx;
}
.voucher-thum {
  width: 80rpx;
  height: 140rpx;
  background: #46e8d4;
  position: relative;
}
.thum {
  width: 100rpx;
  height: 100rpx;
  border-radius: 2px;
  position: absolute;
  left: -40rpx;
  top: 50%;
  transform: translateY(-50rpx);
  flex-shrink: 0
}
.voucher-thum-dots {
  width: 8rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  position: absolute;
  top: 0;
  right: -4rpx;

}
.voucher-thum-dots view {
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
  margin-bottom: 4rpx;
}

.voucher-content {
  padding-left: 18rpx;
}
.voucher-name {
  color: #61626c;
  font-size: 28rpx;
  line-height: 60rpx;
  width: 436rpx;
}
.voucher-date-dot {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: #45d5a1;
  border: 4rpx solid #daf7ec;
  margin-right: 10rpx;
}
.voucher-date-dot:last-child {
  margin-left: 18rpx;
}
.voucher-date {
  color: #8e8f96;
  font-size: 18rpx;
  display: flex;
  align-items: center;
}

.voucher-hot {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #868794;
  margin-top: 10rpx;
  height: 40rpx;
}
.voucher-hot image {
  margin-right: 10rpx;
}
.voucher-hot .icon-xin {
  width: 17rpx;
  height: 15rpx;
}
.voucher-hot .icon-star {
  width: 19rpx;
  height: 18rpx;
  margin-left: 60rpx;
}

.voucher-btn {
  width: 90rpx;
  height: 38rpx;
  border-radius: 19rpx;
  background: linear-gradient(to bottom, #2dde42, #23b051);
  color: #fff;  
  font-size: 20rpx;
  box-shadow: 0 2px 2px 0 #93cd87;
  position: absolute;
  top: 84rpx;
  right: -50rpx;
}
.voucher-btn .voucher-btn-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #fff;
  border: 4rpx solid #57d86e;
  margin-right: 5rpx;
}

.more-btn {
  width: 44rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.more-btn view {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
}
.more-btn view:nth-child(1) {
  background: #c1c1c1;
}
.more-btn view:nth-child(2) {
  background: #a5a5ab;
  margin: 0 4rpx;
}
.more-btn view:nth-child(3) {
  background: #898a95;
}