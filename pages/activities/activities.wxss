.container {
  padding-top: 50rpx;
}
.activities {
  background: #fff;
  border-radius: 5px;
  position: relative;
  margin-bottom: 28rpx;
}
.activities-info {
  padding: 27rpx 24rpx 20rpx;
}
.activities .hot-pic {
  position: absolute;
  width: 83rpx;
  height: 40rpx;
  right: 28rpx;
  top: -8rpx;
  border-top-left-radius: 5px;
}
.activities .activities-pic {
  width: 100%;
  height: 230rpx;
  border-radius: 5px;
}
.activities .activities-title {
  color: #1660e8;
  font-size: 32rpx;
  font-weight: bold;
}
.activities .activities-content {
  color: #bcbdbf;
  font-size: 24rpx;
  width: 540rpx;
}
.activities .split {
  color: #ceced0;
  font-size: 30rpx;
}
.activities-date {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
  color: #a9a9ad;
}
.date-wrap {
  display: flex;
  align-items: center;
}
.activities-date image {
  width: 30rpx;
  height: 29rpx;
  margin-right: 6rpx;
}
.activities .activities-status {
  width: 80rpx;
  height: 28rpx;
  border-radius: 14rpx;
  background: #488feb;
  text-align: center;
  color: #fff;
}
.activities .activities-status.active {
  background: #eb4854 
}


