.panel {
  margin-top: 20rpx;
}
.panel-title {
  height: 60rpx;
}
.panel-title image{
  height: 60rpx;
}
.panel-title .tit  {
  font-size: 32rpx;
}
form {
  display: block;
  margin-top: 24rpx;
}
form .form-group {
  justify-content: space-between;
  align-items: center;
  width: 702rpx;
  height: 120rpx;
  background: #fff;
  border-radius: 5px;
  padding-right: 28rpx;
  box-sizing: border-box;
}
.form-group .label {
  margin: 0 35rpx 0;
}
.form-group input {
  flex: 1;
 
}
.form-group input, .form-group input.input-placeholder {
   color: #91929a;
   font-size: 30rpx;
}
.form-group .gender-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 26rpx 0;
}
.form-group .radio-group .radio {
  border-color: #3b80fe;
}
.form-group .radio-group .radio-checked {
  background: #2cbce2;
}
.form-group .getLocationBtn {
   background-image: linear-gradient( 0deg, rgb(26,84,199) 0%, rgb(22,116,232) 100%);
}
.submitBtn {
  width: 350rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(to right, #2f89f4, #28bcd7);
  font-size: 30rpx;
  color: #fff;
  border-radius: 45rpx;
  padding: 0;
  transform: translateY(150rpx)
}

