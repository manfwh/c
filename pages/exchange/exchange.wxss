.header {
  display: flex;
  align-items: center;
  height: 88rpx;
}
.dots {
  margin-right: 24rpx;
}
.dots .dot1 {
  width: 8rpx;
  height: 8rpx;
  background: #ffc62b;
  border-radius: 50%;
  margin-right: 4rpx;
}
.dots .dot2 {
  width: 24rpx;
  height: 8rpx;
  background: #6dc42d;
  border-radius: 4rpx;
}
.header .text {
  font-size: 24rpx;
  color: #70717b;
}
.fraction {
  width: 74rpx;
  height: 38rpx;
  border-radius: 19rpx;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  background: linear-gradient(to right, #23b051, #2dde42);
  margin-left: 28rpx;
  line-height: 38rpx;
}
/* 选项卡  */

.tab-title {
  display: flex;
  background: #fff;
  align-items: center;
  border-radius: 35rpx;
  padding: 6rpx;
  margin-bottom: 30rpx;
}
.tab .m-auto {
  margin: 0 10rpx;
}

.tab .tab-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 25rpx;
  color: #747482;
  font-size: 28rpx;
  font-weight: bold;
  height: 60rpx;
  border-radius: 30rpx;
}
.tab .tab-btn .dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
}
.tab .selected {
  background: linear-gradient(to right, #2a32d6, #4c68f3);
  color: #fff;
}
.tab .selected .dot {
  background: #fff;
  border: 4rpx solid #7487f2;
}
/* 列表  */
.pro-list {
  flex-wrap: wrap;
}
.pro-item {
  width: 330rpx;
  height: 212rpx;
  border-radius: 5px;
  position: relative;
  margin-bottom: 70rpx;
}
.pro-item image {
  width: 330rpx;
  height: 212rpx;
  border-radius: 5px;
}
.pro-item .pro-info {
  width: 292rpx;
  height: 70rpx;
  border-radius: 5px;
  background: #fff;
  position: absolute;
  bottom: -25rpx;
  left: 50%;
  transform: translateX(-146rpx);
  padding-left: 22rpx;
  box-sizing: border-box;
}
.pro-item .pro-name {

  font-size: 24rpx;
  color: #7d7e87;
  line-height: 28rpx;
  padding-top: 5rpx;
}
.pro-item .pro-price {
  font-size: 24rpx;
  color: #e1a7c0;
  font-weight: bold;
}
.pro-item .pro-price text {
  color: #d93372;
}
.pro-item .btn-wrap {
  box-shadow: 0 2px 8px 0 #697eec;
  width: 120rpx;
  position: absolute;
  right: -20rpx;
  top: 50%;
  transform: translateY(-26rpx);
  border-radius: 5px;
}
.pro-item .buy-btn {
  height: 52rpx;
  border-radius: 5px;
  background: linear-gradient(to right, #2a32d6, #4c68f3);
  box-shadow: inset 0 0 8px 0 rgba(255, 255, 255, 0.4);
}
.pro-item .buy-btn {
  font-size: 22rpx;
  color: #fff;
  padding-left: 8rpx;
  padding-right: 10rpx;
}
.pro-item .dots view {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  margin-right: 3rpx;
  background: #fff;
}
.pro-item .dots view.bg1 {
  background: #d5d7f7;
}
.pro-item .dots view.bg2 {
  background: #acb0f1;
}
.pro-item .dots view.bg3 {
  background: #848ceb;
}